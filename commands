    --ngpus 1 \
    --comment "cifar10 ccl weight" \
    --group initial_tests \
    --dataset cifar10 \
    --num_tasks 5 \
    --max_epochs 600 \
    --min_epochs 200 \
    --num_epochs_schedule warmup \
    --supervised False \
    --devices 0, \
    --augment default \
    --max_epochs_igpt 10 \
    --save_model_every 25 \
    --config src/transformer_vq_vae/configuration/train.ini \
